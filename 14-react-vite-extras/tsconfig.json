{
    "compilerOptions": {
        "target": "ES6",
        "baseUrl": "src",
        "skipLibCheck": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ES6",
        "jsx": "react-jsx",
        "moduleResolution": "Bundler",
        "paths": {
            "~assets/*": [
                "src/assets/*"
            ],
            "~components/*": [
                "src/components/*"
            ],
            "~/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src"
    ]
}